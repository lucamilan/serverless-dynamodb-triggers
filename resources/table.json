{
    "Type" : "AWS::DynamoDB::Table",
    "Properties" : {
    "AttributeDefinitions" : [
        {
        "AttributeName" : "Identifier",
        "AttributeType" : "S"
        }
    ],
    "KeySchema" : [
        {
        "AttributeName" : "Identifier",
        "KeyType" : "HASH"
        }
    ],
    "ProvisionedThroughput" : {
        "ReadCapacityUnits" : "5",
        "WriteCapacityUnits" : "5"
    },
    "StreamSpecification": {
        "StreamViewType" : "NEW_AND_OLD_IMAGES"
    },
    "TableName" : "${self:custom.service}-${opt:stage, self:provider.stage}-spike"
    }
}